{
  "build": {
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Bytes Browser",
    "version": "1.0.1"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://server.bytesbrowser.com/releases/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBNkJCNjU5MkZEQ0ZBMEYKUldRUCt0d3ZXYlpyU3BxcG53MlFzMkpQbUNvYkxJV1dUa0djU2MzS3BjOWEzUnQvYjI4eDBUZmcK"
    },
    "allowlist": {
      "os": {
        "all": true
      },
      "all": false,
      "shell": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "rust.files",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "title": "Bytes Browser",
        "width": 1460,
        "height": 1200,
        "decorations": false,
        "minWidth": 1460,
        "minHeight": 1200
      }
    ]
  }
}